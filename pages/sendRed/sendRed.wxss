/* pages/login/login.wxss */
.container{
    padding: 1rem;
    font-size: 0.9rem;
    line-height: 1.5rem;
    border-shadow: 1px 1px #0099CC;
}
.row{
    display: flex;
    align-items: center;
    margin-bottom: 1.2rem;
}
.row text{
    flex-grow: 1;
    text-align: right;
}
.row input{
    font-size: 0.7rem;
    color: #ccc;
    flex-grow: 3;
    border: 1px solid #0099CC;
    display: inline-block;
    border-radius: 0.3rem;
    box-shadow: 0 0 0.15rem #aaa;
    padding: 0.3rem;
    width: 320px;
}
.row button{
    padding: 0 2rem;
}
.txt1{
  font-size: 30px;
  margin-left: 20px;
}
.txt2{
  margin-top: 10px;
  margin-left: 20px;
  margin-bottom: 20px;
}
.btn1{
  background-color: #ffcc33;
  margin-top: 50px;
}